<resources>

    <declare-styleable name="cropper_CropperView">

        <!--Crop image view-->
        <attr name="cropper_aspect_ratio_x" format="float" />
        <attr name="cropper_aspect_ratio_y" format="float" />

        <!--Overlay view-->
        <attr name="cropper_show_oval_crop_frame" format="boolean" />
        <attr name="cropper_oval_dimmed_layer" format="boolean" />
        <attr name="cropper_dimmed_color" format="color" />

        <attr name="cropper_grid_stroke_size" format="dimension" />
        <attr name="cropper_grid_color" format="color" />
        <attr name="cropper_grid_row_count" format="integer" />
        <attr name="cropper_grid_column_count" format="integer" />
        <attr name="cropper_show_grid" format="boolean" />

        <attr name="cropper_frame_stroke_size" format="dimension" />
        <attr name="cropper_frame_color" format="color" />
        <attr name="cropper_show_frame" format="boolean" />
    </declare-styleable>

</resources>